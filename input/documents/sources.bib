}

%% Concept: Photon
@book{Newton1704,
author    = {Newton, Isaac},
title     = {Opticks},
publisher = {Samuel Smith and Benjamin Walford},
address   = {London},
date      = {1704},
note      = {Newton's \emph{Opticks} is a foundational work in optical science wherein he championed a corpuscular (particle) theory of light. He proposed that light consists of tiny particles or “corpuscles” emitted by luminous bodies. While Newton did not conceive of photons in the modern quantum sense, his corpuscles were a crucial early concept of light as discrete entities. This idea --- that light has a particulate nature --- set the historical stage for the later development of the photon concept.}
}
@article{Planck1901,
author  = {Planck, Max},
title   = {On the Law of Distribution of Energy in the Normal Spectrum},
journal = {Annalen der Physik},
volume  = {4},
pages   = {553--563},
date    = {1901},
note    = {Planck's 1901 paper (submitted in late 1900) introduced the idea of energy quanta. In explaining blackbody radiation, Planck assumed that the energy of electromagnetic oscillators could only take on discrete values (\$E = h\nu\$). This quantization was a radical break from classical physics and is considered the birth of quantum theory. Although Planck spoke of quantized oscillators rather than light quanta per se, his work paved the way for the photon by showing that electromagnetic energy exchange is fundamentally granular, foreshadowing the concept of light quanta.}
}
@article{Compton1923,
author  = {Compton, Arthur H.},
title   = {A Quantum Theory of the Scattering of X-rays by Light Elements},
journal = {Physical Review},
volume  = {21},
number  = {5},
pages   = {483--502},
date    = {1923},
note    = {Compton's experiment measured X-rays scattering off electrons and found that the scattered X-rays had a longer wavelength (lower energy) than the incident X-rays, with the difference depending on the angle of scatter. This “Compton effect” could only be explained if X-rays behaved like particles (photons) with momentum: a photon colliding with an electron transfers some energy and momentum, resulting in a lower-energy (longer wavelength) photon after collision. Compton's work was definitive experimental proof of photon behavior and earned him the 1927 Nobel Prize, cementing the photon as a real particle of light.}
}
@article{Lewis1926,
author  = {Lewis, Gilbert N.},
title   = {The Conservation of Photons},
journal = {Nature},
volume  = {118},
pages   = {874--875},
date    = {1926},
note    = {In this letter to \emph{Nature}, G. N. Lewis coined the term “photon” for the light quantum. He speculated that photons are “indestructible and uncreatable” in the sense that the number of photons is conserved (a view later shown to be incorrect in general, but useful at the time). By naming the light quantum as “photon,” Lewis gave a permanent identity to the concept of a light particle. The introduction of the term helped solidify the concept in both the literature and the imagination of physicists, marking the photon's entry into the lexicon of science.}
}

