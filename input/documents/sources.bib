date      = {-0600?},
note      = {The opening of the Hebrew Bible provides a classic statement of cosmic origin: \emph{“In the beginning, God created the heavens and the earth.”} This ancient text posits a singular beginning to the universe initiated by a divine act. As a cultural and philosophical reference point, it embodies the concept of an absolute origin or starting point of everything—an idea that has influenced countless cosmologies by asserting that time and existence have a definite inception.}
}
@book{AristotleMetaphysicsLambda,
author    = {Aristotle},
title     = {Metaphysics (Book XII, Lambda)},
date      = {-0400?},
note      = {Aristotle, in Metaphysics Book XII, discusses the ultimate causes of the cosmos and introduces the concept of the \emph{unmoved mover}. This eternal, unchanging first cause is said to initiate all motion without itself being moved. Aristotle's unmoved mover can be seen as a philosophical notion of an “origin” of motion and order in the universe—a primal source that sets everything in motion. This idea provided a foundation for later cosmological and theological thinking about how and why the universe began (or whether it has an initial cause at all).}
}
@article{Lemaitre1931,
